<%- include ('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
                <form class="form-signin">
                    <h1 class="display-4 text-center">PLEASE SIGN IN</h1>
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <input type="email" id="inputEmail" class="form-control shadow-none select" placeholder="Email address">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" id="inputPassword" class="form-control select" placeholder="Password">
                    <div class="checkbox mb-3">
                      <label>
                        <input type="checkbox" value="remember-me"> Remember me
                      </label>
                    </div>
                    <button class="btn btn-sm btn-success btn-block" type="submit">Sign in</button>
                  </form>
        </div>
    </div>
</div>


